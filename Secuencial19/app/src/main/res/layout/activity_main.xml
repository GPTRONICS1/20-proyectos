<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <!-- EditText para ingresar el costo diario del hotel -->
        <EditText
            android:id="@+id/etCostoHotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Ingrese el costo diario del hotel" />

        <!-- EditText para ingresar el costo diario de la comida -->
        <EditText
            android:id="@+id/etCostoComida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Ingrese el costo diario de la comida" />

        <!-- EditText para ingresar el número de días -->
        <EditText
            android:id="@+id/etDias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Ingrese el número de días" />

        <!-- Botón para calcular el monto total del cheque -->
        <Button
            android:id="@+id/btnCalcularCheque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calcular Cheque"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:onClick="calcularCheque" />

        <!-- TextView para mostrar el desglose del monto -->
        <TextView
            android:id="@+id/tvDesglose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desglose del Monto:"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
