<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivFigura"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/img"
        android:contentDescription="Figura A que describe la forma a calcular" />

    <EditText
        android:id="@+id/etH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese la hipotenusa (H)" />

    <EditText
        android:id="@+id/etR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el radio (R)" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular Área"
        android:onClick="calcularArea"/>
</LinearLayout>
